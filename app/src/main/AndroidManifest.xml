<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="matthewallenlinsoftware.keepy_uppy" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/keepy_uppy_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".choose_ball"
            android:label="@string/title_activity_choose_ball" >
        </activity>
        <activity
            android:name=".choose_background"
            android:label="@string/title_activity_choose_background" >
        </activity>
        <activity
            android:name=".gameplay"
            android:label="@string/title_activity_gameplay" >
        </activity>
        <activity
            android:name=".rules"
            android:label="@string/title_activity_rules" >
        </activity>
    </application>

</manifest>
