<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="matthewallenlinsoftware.keepy_uppy.rules">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rulesImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/rules"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:id="@+id/rulesTextView"
        android:layout_alignTop="@+id/rulesImageView"
        android:layout_centerHorizontal="true"
        android:textSize="48dp"
        android:textColor="#ff14ff26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Keep the ball in the air as long as possible and try to accumulate points!"
        android:id="@+id/textView"
        android:layout_below="@+id/rulesTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
