<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="matthewallenlinsoftware.keepy_uppy.choose_background"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/choose_background"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/choose_background"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="false"
        android:contentDescription=""
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Background"
        android:id="@+id/choose_background_title"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:onClick="onClickBackArrow" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/desert_button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/desert"
        android:scaleType="fitXY"
        android:onClick="moveForward" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/beach_button"
        android:layout_alignTop="@+id/desert_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/beach"
        android:scaleType="fitXY"
        android:onClick="moveForward" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/forest_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/forest"
        android:scaleType="fitXY"
        android:onClick="moveForward" />

    <ImageButton
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/back_arrow_button"
        android:src="@drawable/back_arrow"
        android:onClick="onClickBackArrow"
        android:scaleType="fitXY"
        android:layout_below="@+id/desert_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>
