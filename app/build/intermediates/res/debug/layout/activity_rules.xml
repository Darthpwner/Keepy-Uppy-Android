<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="matthewallenlinsoftware.keepy_uppy.rules">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rules_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/rules"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:id="@+id/rules"
        android:layout_alignTop="@+id/rules_background"
        android:layout_centerHorizontal="true"
        android:textSize="48dp"
        android:textColor="#ff14ff26"
        android:typeface="sans"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/back_arrow_button"
        android:layout_alignBottom="@+id/rules_background"
        android:src="@drawable/back_arrow"
        android:scaleType="fitXY"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="50dp"
        android:onClick="onClickBackArrow"
        android:background="@null" />

</RelativeLayout>
