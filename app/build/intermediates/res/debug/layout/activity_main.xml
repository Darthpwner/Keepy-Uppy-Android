<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:id="@+id/TitlePageScene">

    <!-- This nested layout contains views of its own -->


    <!-- Displays keyboard when touched -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Keepy Uppy"
        android:id="@+id/Title"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="#ff0648ff"
        android:textSize="70sp"
        android:background="#fff9ff14"
        android:layout_margin="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BouncingBallGif"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:src="@drawable/bouncing_ball" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/Start"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textColor="#ffff1220"
        android:background="#ff254bff"
        android:textSize="50sp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="50dp" />

</LinearLayout>
