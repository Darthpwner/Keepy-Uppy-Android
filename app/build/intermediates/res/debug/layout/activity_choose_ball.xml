<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="matthewallenlinsoftware.keepy_uppy.choose_ball"
    android:padding="0dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/choose_ball_background"
        android:src="@drawable/choose_ball"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_margin="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a Ball"
        android:id="@+id/choose_ball_title"
        android:textIsSelectable="false"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#fffbfffb"
        android:typeface="sans"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/beach_ball_button"
        android:src="@drawable/beach_ball"
        android:scaleType="fitXY"
        android:onClick="moveForward"
        android:layout_below="@+id/basketball_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/basketball_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/basketball"
        android:onClick="moveForward"
        android:background="@null" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bowling_ball_button"
        android:scaleType="fitXY"
        android:src="@drawable/bowling_ball"
        android:onClick="moveForward"
        android:layout_below="@+id/basketball_text_view"
        android:layout_alignLeft="@+id/bowling_ball_text_view"
        android:layout_alignStart="@+id/bowling_ball_text_view"
        android:background="@null" />

    <ImageButton
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:id="@+id/back_arrow_button"
        android:src="@drawable/back_arrow"
        android:focusableInTouchMode="false"
        android:onClick="onClickBackArrow"
        android:layout_marginTop="52dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/beach_ball_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Bounce"
        android:id="@+id/beach_ball_text_view"
        android:textColor="#f5f7fffd"
        android:layout_above="@+id/beach_ball_button"
        android:layout_alignRight="@+id/beach_ball_button"
        android:layout_alignEnd="@+id/beach_ball_button"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Bounce"
        android:id="@+id/basketball_text_view"
        android:layout_above="@+id/basketball_button"
        android:layout_alignRight="@+id/basketball_button"
        android:layout_alignEnd="@+id/basketball_button"
        android:textColor="#fff5fffb"
        android:typeface="sans"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Least Bounce"
        android:id="@+id/bowling_ball_text_view"
        android:textColor="#fffafbff"
        android:layout_above="@+id/bowling_ball_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:textStyle="bold"
        android:typeface="sans" />

</RelativeLayout>
